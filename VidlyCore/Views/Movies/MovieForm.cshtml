@model VidlyCore.ViewModels.MovieFormViewModel
@{
    ViewData["Title"] = "MovieForm";
}
@{ 
    var formTitle = "Edit Movie";
    if(Model.Movie == null)
    {
        formTitle = "New Movie";
    }
}

<h1>@formTitle</h1>
<form asp-action="Save" asp-controller="Movies" method="post">
    <div class="form-group">
        <label asp-for="Movie.Name"></label>
        <input type="text" asp-for="Movie.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Movie.ReleaseDate"></label>
        <input type="text" asp-for="Movie.ReleaseDate" asp-format="{0:d MMM yyyy}" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Movie.GenreId"></label>
        <select class="form-control" asp-for="Movie.GenreId" asp-items="@(new SelectList(Model.Genres,"Id", "Name"))">
            <option>Select Movie Genre</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Movie.NumberInStock"></label>
        <input type="text" asp-for="Movie.NumberInStock" class="form-control" />
    </div>
    <input type="text" asp-for="Movie.Id" hidden/>
    <button type="submit" class="btn btn-primary">Send</button>
</form>

