@model List<VidlyCore.Models.Movie>
@{
    ViewData["Title"] = "Index";
}

<h2>Movies</h2>
<a asp-action="New" asp-controller="Movies" class="btn btn-primary mb-3" >New Movie</a>
@if (Model.Count == 0)
{
    <p>We don't have any movies yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td><a asp-action="Edit" asp-controller="Movies" asp-route-id="@movie.Id" >@movie.Name</a></td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </table>
}

